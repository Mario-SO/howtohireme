---
const { text, link } = Astro.props;
---

<a href={link} class="text-white text-md md:text-lg">
    <div class="border border-white p-5 uppercase cursor-pointer">
        <div class="flex items-center">
            <div
                class="w-5 h-5 bg-black border border-white mr-2 flex items-center justify-center"
            >
                <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </div>
            {text}
        </div>
    </div>
</a>
