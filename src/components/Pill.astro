---
const { text, link } = Astro.props;
---

<div
    class="animate-fade-in border border-white text-white p-4 space-x-2 uppercase"
>
    <div class="flex items-center space-x-2">
        <div
            class="w-5 h-5 bg-black border border-white mr-1 cursor-pointer flex items-center justify-center"
        >
            <svg
                class="w-3 h-3 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
            </svg>
        </div>
        <a href={link} class="text-white">{text}</a>
    </div>
</div>
